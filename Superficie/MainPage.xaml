<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Superficie.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="triangulo.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label Text="Digite la base de un triangulo" FontSize="15" TextColor="DarkBlue"/>
            <Entry x:Name="b" Placeholder="0" Keyboard="Numeric"/>

            <Label Text="Digite la altura de un triangulo" FontSize="15" TextColor="DarkBlue" />
            <Entry x:Name="a" Placeholder="0" Keyboard="Numeric"/>

            <Label Text="Superficie del triangulo" FontSize="15" TextColor="DarkBlue"/>
            <Entry x:Name="Superf" Placeholder="0" IsEnabled="False"/>


            <Button x:Name="btnCalcular" Text="CALCULAR" BackgroundColor="DeepPink" TextColor="AliceBlue" BorderColor="LightPink"
                WidthRequest="100" HeightRequest="50" BorderWidth="3" Clicked="btnCalcular_Clicked" HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
